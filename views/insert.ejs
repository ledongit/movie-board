<%- include("include/header"); %>

<main id="main">
  <div id="contents">
    <h2 class="title"><%= title %></h2>
    <form
      action="/register"
      method="POST"
      id="confirm"
      class="formBox"
      enctype="multipart/form-data"
    >
      <div class="inputBox">
        <label>
          <span class="label">영화제목</span>
          <input
            type="text"
            id="movieTitle"
            name="movieTitle"
            placeholder="영화 제목을 입력하세요"
          />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">관람일</span>
          <input
            type="text"
            id="date"
            name="date"
            placeholder="관람일을 입력하세요"
          />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">후기 작성</span>
          <textarea name="desc" id="desc" cols="30" rows="10"></textarea>
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">평점</span>
          <input
            type="number"
            max="5"
            min="0"
            step="0.1"
            id="point"
            name="point"
          />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">이미지 첨부</span>
          <input type="file" name="image" id="image" />
        </label>
      </div>
      <div class="btns">
        <button type="submit" data-value="10" id="btnConfirm">작성</button>
        <button type="reset">취소</button>
      </div>
    </form>
  </div>
</main>

<%- include("include/footer"); %>
