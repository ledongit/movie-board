<%- include("include/header"); %>

<main id="main">
  <div id="contents">
    <h2 class="title"><%= title %></h2>
    <div class="table">
      <div class="head">
        <span style="width: 5%">No</span>
        <span style="width: 10%">Point</span>
        <span style="width: 20%">Movie</span>
        <span>Subject</span>
        <span style="width: 10%">Date</span>
      </div>
      <ul class="body">
        <% list.forEach((item, idx) => { %>
        <li>
          <div class="column"><%= idx+1 %></div>
          <div class="column"><%= item.point %></div>
          <div class="column"><%= item.movieTitle %></div>
          <div class="column subject">
            <a href="/review/<%= item.id %>"><%= item.postTitle %></a>
          </div>
          <div class="column"><%= item.date %></div>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
</main>

<%- include("include/footer"); %>
